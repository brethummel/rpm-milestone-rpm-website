// Populate template options for posts
function spr_add_related_template_options($field) {

		$templates = glob(get_template_directory() . '/partials/custom/_templates/_posts/posts_singlet-*');

		$field['choices'] = [];

		foreach( $templates as $template ) {
			
			$file = strtok(substr(strrchr($template, '/'), 1), '.');
			// echo('<pre>'); print_r($file); echo('</pre>');
			$contents = file_get_contents($template);
			$pos = strpos($contents, "Template Name: ");
			$name = substr($contents, $pos + 15, stripos($contents, PHP_EOL, $pos)-($pos + 15));	
			
			$field['choices'][$file] = $name;
			
		}

		return $field;
}
add_filter('acf/load_field/key=field_66318a19261fb', 'spr_add_related_template_options');


